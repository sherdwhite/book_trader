    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django ASGI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "booktrader.asgi:application",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "django": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/booktrader",
            "env": {
                "DJANGO_DEBUG": "True"
            }
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": false,
            "program": "${workspaceFolder}/booktrader/manage.py",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_DEBUG": "True"
            }
        },
        {
            "name": "Django Shell",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/booktrader/manage.py",
            "django": true,
            "justMyCode": false,
            "args": ["shell"],
            "console": "integratedTerminal"
        }
    ]
}
